CREATE TABLE Users (
    userID bigserial PRIMARY KEY,
    username character varying(50),
    password character varying(50),
    email character varying(100),
    first_name character varying(50),
    last_name character varying(50),
    created_at date
);

CREATE TABLE Movie_Ratings (
    ID bigserial PRIMARY KEY ,
    userID bigint REFERENCES Users(userID) ,
    movieID bigint REFERENCES Movies(movieID),
    rating bigint,
    timestamp timestamp
);

CREATE TABLE Movies (
	adult BOOLEAN DEFAULT 'False',
	budget integer DEFAULT 0,
	homepage character varying(1000),
	movieID bigserial NOT NULL,
	imdb_id character varying(20),
	original_language character varying(5),
	original_title character varying(500),
	overview TEXT,
	popularity float4 DEFAULT 0,
	poster_path character varying(500),
	release_date DATE,
	revenue integer DEFAULT 0,
	runtime float4 DEFAULT 0,
	status character varying(20),
	tagline character varying(1000),
	title character varying(1000),
	video BOOLEAN DEFAULT 'False',
	vote_average float4,
	vote_count integer DEFAULT 0
);

CREATE TABLE Genres
(
    genreID bigserial PRIMARY KEY ,
    name character varying(100)
);

CREATE TABLE Movies_Genres
(
    genre_id bigint REFERENCES Genres(genreID),
    movie_id bigint REFERENCES Movies(movieID)
);


CREATE TABLE Languages
(
    languageID bigserial PRIMARY KEY ,
    iso_639_1 character varying(5),
    name character varying(100)
);

CREATE TABLE Movies_Languages
(
    movie_id bigserial REFERENCES Movies(movieID),
    language_id bigserial REFERENCES Languages(languageID)
);


CREATE TABLE Keywords
(
    keywordID bigserial PRIMARY KEY ,
    name character varying(200)
);

CREATE TABLE Movies_Keywords
(
    movie_id bigserial REFERENCES Movies(movieID),
    keyword_id bigserial REFERENCES Keywords(keywordID)
);

CREATE TABLE ProductionCompanies
(
    ProductionCompanyID bigserial PRIMARY KEY ,
    name character varying(200)
);

CREATE TABLE Movies_ProductionCompanies
(
    movie_id bigserial REFERENCES Movies(movieID),
    ProductionCompanies_id bigserial REFERENCES ProductionCompanies(ProductionCompanyID)
);


CREATE TABLE ProductionCountries
(
    ProductionCountryID bigserial PRIMARY KEY ,
    iso_639_1 character varying(5),
    name character varying(200)
);

CREATE TABLE Movies_ProductionCountries
(
    movie_id bigserial REFERENCES Movies(movieID),
    ProductionCountry_id bigserial REFERENCES ProductionCountries(ProductionCountryID)
);

CREATE TABLE Casts
(
    castID bigserial PRIMARY KEY ,
    character character varying(200),
    credit_id character varying(250),
    gender int2,
    id bigserial,
    name character varying(200),
    "order" integer,
    profile_path character varying(500)
);


CREATE TABLE Movies_Casts
(
    movie_id bigserial REFERENCES Movies(movieID),
    cast_id bigserial REFERENCES Casts(castID)
);







